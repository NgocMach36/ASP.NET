@model SanPham
<div class=" container">
    <form method="post" asp-action="Upsert">
        <div class="form-group">
            <label>Tên</label>
            <input asp-for="Name" class=" form-control"/>
            <span asp-validation-for="Name" class=" text-danger"></span>
        </div>

        <div class="form-group">
            <label>Giá</label>
            <input asp-for="Price" type="number" class=" form-control"/>
            <span asp-validation-for="Price" class=" text-danger"></span>
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <input asp-for="Description" class=" form-control"/>
            <span asp-validation-for="Description" class=" text-danger"></span>
        </div>

        <div class="form-group">
            <label>Hình ảnh</label>
            <input asp-for="ImageUrl" class=" form-control"/>
            <span asp-validation-for="ImageUrl" class=" text-danger"></span>
        </div>


        <div class=" form-group">
            <lable asp-for ="TheLoaiId"> Thể Loại </lable>
            <select asp-for="TheLoaiId" asp-items="@ViewBag.DSTheLoai" class=" form-control">
                <option disabled>Chọn thể loại</option>
            </select>
            <span asp-validation-for="TheLoaiId" class=" text-danger"></span>
        </div>
        <button type ="submit" class=" btn btn-primary">@(Model.Id == 0 ? "Tạo Mới" : "Cập nhật" )</button>
        <a asp-action="Index " class=" btn btn-secondary"> Hủy</a>
    </form>
</div>
